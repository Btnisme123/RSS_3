<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/common_size_5"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:id="@+id/linear_item_news"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_news_height"
        android:background="@drawable/raised_button"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_news"
            android:layout_width="@dimen/list_news_image_size"
            android:layout_height="@dimen/list_news_image_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_size_10" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/image_favorite"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="@dimen/common_size_10"
                android:paddingRight="@dimen/common_size_10"
                android:paddingTop="@dimen/common_size_5"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_title"
                android:layout_toLeftOf="@+id/image_favorite"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="3"
                android:paddingBottom="@dimen/common_size_10"
                android:paddingLeft="@dimen/common_size_15"
                android:paddingRight="@dimen/common_size_10"
                android:paddingTop="@dimen/common_size_5"
                android:textSize="@dimen/common_text_size_5" />

            <ImageView
                android:id="@+id/image_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:padding="@dimen/common_size_10"
                android:src="@drawable/ic_normal_star" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>