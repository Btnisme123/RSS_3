<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_news_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_news"
            android:layout_width="@dimen/list_news_image_size"
            android:layout_height="@dimen/list_news_image_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_size_10" />

        <LinearLayout
            android:id="@+id/item_news_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="@dimen/common_size_10"
                android:paddingRight="@dimen/common_size_10"
                android:paddingTop="@dimen/common_size_5"
                android:singleLine="true"
                android:text="Aloha"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_8"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="3"
                android:paddingBottom="@dimen/common_size_10"
                android:paddingLeft="@dimen/common_size_15"
                android:paddingRight="@dimen/common_size_10"
                android:paddingTop="@dimen/common_size_5"
                android:text="Ahihi"
                android:textSize="@dimen/common_text_size_5" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>