<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_news"
        android:layout_width="@dimen/width_image_news_gridview"
        android:layout_height="@dimen/height_image_news_gridview"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/text_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_size_3"
        android:textColor="@color/black"
        android:textSize="@dimen/common_text_size_6"
        android:textStyle="bold" />
</LinearLayout>
